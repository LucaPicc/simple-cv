---
import GlobeIcon from "@/icons/GlobeIcon.astro";
import Section from "../Section.astro";
import { languages } from "@cv";

---
<Section title="Idiomas">
    <ul>
        {
            languages.map(({language, fluency}) => (
                <li>
                    <article>
                        <header><GlobeIcon width="1rem" height="1rem" /><h3>{language}</h3></header>
                        <footer><p>{fluency}</p></footer>
                    </article>
                </li>
            ))
        }
    </ul>
</Section>

<style>

    ul {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    article header {
        margin-bottom: 0px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    article header h3 {
        font-size: 1.5rem;
        margin-bottom: 1px;
        font-weight: 500 !important;
    }

    article footer {
        margin-top: 0px;
    }

    article footer p {
        margin-top: .2rem;
        color: #555;
    }

</style>