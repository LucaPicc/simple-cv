---
import type { SocialIcon } from "@/types";
import Section from "../Section.astro";
import { skills } from "@cv";
import PythonIcon from "@/icons/PythonIcon.astro";
import DockerIcon from "@/icons/DockerIcon.astro";
import JavaScriptIcon from "@/icons/JavaScriptIcon.astro";
import CodeIcon from "@/icons/CodeIcon.astro";
import HTMLIcon from "@/icons/HTMLIcon.astro";
import CSSIcon from "@/icons/CSSIcon.astro";
import ReactIcon from "@/icons/ReactIcon.astro";
import NodeJSIcon from "@/icons/NodeJSIcon.astro";
import DjangoIcon from "@/icons/DjangoIcon.astro";
import MongoDBIcon from "@/icons/MongoDBIcon.astro";
import PostgreSQLIcon from "@/icons/PostgreSQLIcon.astro";
import NextJSIcon from "@/icons/NextJSIcon.astro";
import TypescriptIcon from "@/icons/TypescriptIcon.astro";
import RedisIcon from "@/icons/RedisIcon.astro";
import SocketIOIcon from "@/icons/SocketIOIcon.astro";
import MySQLIcon from "@/icons/MySQLIcon.astro";
import DRFIcon from "@/icons/DRFIcon.astro";
import ProgressBar from "../common/ProgressBar.astro";
import FastAPIIcon from "@/icons/FastAPIIcon.astro";
import SQLIcon from "@/icons/SQLIcon.astro";
import ExpressJSIcon from "@/icons/ExpressJSIcon.astro";
import CIcon from "@/icons/CIcon.astro";

const TecIcons: SocialIcon = {
    "Python": PythonIcon,
    "Docker": DockerIcon,
    "Javascript": JavaScriptIcon,
    "HTML": HTMLIcon,
    "CSS": CSSIcon,
    "React": ReactIcon,
    "Node JS": NodeJSIcon,
    "Django": DjangoIcon,
    "MongoDB": MongoDBIcon,
    "PostgreSQL": PostgreSQLIcon,
    "Next JS": NextJSIcon,
    "Typescript": TypescriptIcon,
    "Redis": RedisIcon,
    "Socket.io": SocketIOIcon,
    "MySQL": MySQLIcon,
    "Django Rest Framework": DRFIcon,
    "FastAPI": FastAPIIcon,
    "SQL": SQLIcon,
    "Express JS": ExpressJSIcon,
    "C": CIcon
}
---

<Section title="Skills">
    <ul>
        {
            skills.map(({name, level, keywords}) => {
                const TecIcon = TecIcons[name] ? TecIcons[name] : CodeIcon
                
                return (
                    <li>
                        <div class="item">
                            <TecIcon width="1rem" height="1rem"/><span>{name}</span>
                        </div>
                        <ProgressBar level={level}/>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        margin-top: 20px;
        display: inline-flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    li {
        width: 150px;
    }

    .item {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 5px;
    }

    .item span {
        margin-left: .2rem;
    }
</style>